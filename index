    <script>
        
        const tooltipTitleCallback = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                              return label.join(' ');
                            } else {
                              return label;
                            }
                        }
                    }
                }
            }
        };

        const colors = {
            primary: '#002F5B', /* Brand Navy */
            accent: '#00C2B8', /* Accent Cyan */
            action: '#FC913A', /* Action Orange */
            darkText: '#001C36',
            lightGrey: '#D9D9D9'
        };

        new Chart(document.getElementById('benchmarkChart'), {
            type: 'bar',
            data: {
                labels: [['Atlassian', 'Avg. Length (1:45)'], 'Top B2B SaaS (2:30)', ['EcoOnline', 'Current (6:32)']],
                datasets: [{
                    label: 'Video Length (Minutes)',
                    data: [1.75, 2.5, 6.5],
                    backgroundColor: [colors.accent, colors.primary, colors.action],
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y',
                scales: {
                    x: {
                        beginAtZero: true,
                        max: 8,
                        title: {
                            display: true,
                            text: 'Duration in Minutes (Shorter is Better)',
                            color: colors.darkText
                        },
                        ticks: { color: colors.darkText, stepSize: 1 },
                        grid: { display: false }
                    },
                    y: {
                        ticks: { color: colors.darkText },
                        grid: { display: false }
                    }
                },
                plugins: {
                    legend: { display: false },
                    title: {
                        display: true,
                        text: 'Competitive Video Length Benchmark',
                        color: colors.darkText,
                        font: { size: 18, weight: 'bold' }
                    },
                    ...tooltipTitleCallback.plugins
                }
            }
        });

        new Chart(document.getElementById('forecastChart'), {
            type: 'bar',
            data: {
                labels: ['Month 1 (Efficiency)', 'Month 2 (Compliance)', 'Month 3 (Reporting)'],
                datasets: [
                    {
                        label: 'ICP Demos (2-3 min)',
                        data: [4, 4, 4],
                        backgroundColor: colors.primary,
                    },
                    {
                        label: 'Quick Tips (<60s)',
                        data: [8, 8, 8],
                        backgroundColor: colors.accent,
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        stacked: true,
                        ticks: { color: colors.darkText },
                        grid: { display: false }
                    },
                    y: {
                        stacked: true,
                        beginAtZero: true,
                        max: 15,
                        title: {
                            display: true,
                            text: 'Total Videos Produced Per Month (Goal: 12)',
                            color: colors.darkText
                        },
                        ticks: { color: colors.darkText },
                        grid: { color: colors.lightGrey }
                    }
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: colors.darkText
                        }
                    },
                    title: {
                        display: true,
                        text: '3-Month Video Output Forecast (36 Total Assets)',
                        color: colors.darkText,
                        font: { size: 18, weight: 'bold' }
                    },
                    ...tooltipTitleCallback.plugins
                }
            }
        });
    </script>
